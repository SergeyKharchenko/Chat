@model Chat.ViewModels.RoomInfo

@{
    ViewBag.Title = Model.Title + " Info";
}

<h2>@Model.Title Info</h2>

<p>
    Was created by <b>@Model.CreatorName</b><br/>
    Last activity: @Html.DisplayFor(chat => chat.LastActivity)
</p>

<div class="chat-members">
    Members:
    <ul class="chat-members-list">
        @foreach (var member in Model.MemberNames)
        {
            <li>
                @member
            </li>
        }
    </ul>
</div>

<div class="chat-records">
    @if (Model.Records.Length > 0)
    {
        @:Last records:
        <ul class="chat-records-list">
            @foreach (var record in Model.Records)
            {
                <li>
                    @record.Creator.Login: @record.Text
                </li>
            }    
        </ul>
    }
    else
    {
        @:No records here
    }
</div>

<div>
    @Html.ActionLink("Back to Room list", "List")<br/>
    @Html.ActionLink(Model.IsCreator ? "Enter" : "Join", "Join", new {roomId = Model.Id})
</div>