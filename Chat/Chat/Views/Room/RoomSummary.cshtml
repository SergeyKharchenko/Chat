@model Chat.ViewModels.RoomInfo

<div class="chat-element-container">
    <div class="chat-title">
        <i>@Model.Title</i> - <b>@Model.CreatorName</b>
    </div>
    <span id="chat-actions">
        @Html.ActionLink("Info", "Info", "Room", new {roomId = Model.Id}, null)
        @Html.ActionLink(Model.IsCreator ? "Enter" : "Join", "Join", "Room", new {roomId = Model.Id}, null)
    </span>
    <div class="room-last-activity">
        <div>
            @Html.DisplayNameFor(room => room.LastActivity): @Model.LastActivity
        </div>    
    </div>
</div>