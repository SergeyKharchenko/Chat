@model Entities.Models.Chat

<div class="chat-element-container">
    <div class="chat-title">
        <i>@Model.Title</i> - <b>@Model.Creator.Login</b>
    </div>
    <span id="chat-actions">
        @Html.ActionLink("Info", "Info", "Chat", new {chatId = Model.ChatId}, null)
        @Html.ActionLink("Join", "JoinRoom", "Chat", new {chatId = Model.ChatId}, null)
    </span>
    <div class="chat-last-activity">
        <div>
            @Html.DisplayNameFor(chat => chat.CreatorionDate): @Model.CreatorionDate
        </div>    
    </div>
</div>